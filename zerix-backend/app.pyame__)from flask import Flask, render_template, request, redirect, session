 = "zerix-secret"

# ------------------------
# إنشاء قاعدة البيانات لو مش موجودة
# ------------------------
def init_db():
    if not os.path.exists("zerix.db"):
        conn = sqlite3.connect("zerix.db")
        c = conn.cursor()
        c.execute("""
            CREATE TABLE users (
                id INTEGER PRIMARY KEY AUTOINCREMENT,
                username TEXT UNIQUE,
                email TEXT UNIQUE,
                password TEXT
            )
        """)
        conn.commit()
        conn.close()

init_db()

# ------------------------
# الصفحة الرئيسية (لو المستخدم مسجل يخش البروفايل)
# ------------------------
@app.route("/")
def home():
    if "user_id" in session:
        return redirect("/profile")
    return redirect("/login")

# ------------------------
# صفحة إنشاء حساب
# ------------------------
@app.route("/register", methods=["GET", "POST"])
def register():
    if request.method == "POST":
        username = request.form["username"]
        email = request.form["email"]
        password = request.form["password"]

        conn = sqlite3.connect("zerix.db")
        c = conn.cursor()

        try:
            c.execute("INSERT INTO users (username, email, password) VALUES (?, ?, ?)",
                      (username, email, password))
            conn.commit()
            conn.close()
            return redirect("/login")
        except:
            conn.close()
            return "❌ اسم المستخدم أو الإيميل موجود بالفعل"

    return render_template("signup.html")

# ------------------------
# صفحة تسجيل الدخول
# ------------------------
@app.route("/login", methods=["GET", "POST"])
def login():
    if request.method == "POST":
        email = request.form["email"]
        password = request.form["password"]

        conn = sqlite3.connect("zerix.db")
        c = conn.cursor()
        c.execute("SELECT id FROM users WHERE email=? AND password=?", (email, password))
        user = c.fetchone()
        conn.close()

        if user:
            session["user_id"] = user[0]
            return redirect("/profile")
        else:
            return "❌ بيانات الدخول غلط"

    return render_template("login.html")

# ------------------------
# صفحة البروفايل
# ------------------------
@app.route("/profile")
def profile():
    if "user_id" not in session:
        return redirect("/login")
    return render_template("profile.html")

# ------------------------
# تسجيل الخروج
# ------------------------
@app.route("/logout")
def logout():
    session.clear()
    return redirect("/login")

# ------------------------
# Run Server
# ------------------------
if __name__ == "__main__":
    app.run(host="0.0.0.0", port=5000)
